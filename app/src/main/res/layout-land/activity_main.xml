<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgrd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/title"
            android:text="@string/title"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:autoSizeTextType="uniform"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeMinTextSize="40dp"
            android:autoSizeMaxTextSize="100dp"
            android:layout_weight="0.9"
            style="@style/all_text"


            />


        <ImageView

            android:id="@+id/logoCat"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:hint="my cat"
            android:src="@drawable/cat_n"
            android:layout_weight="1"
            android:contentDescription="main cat image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1">


            <Button
                android:id="@+id/bGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30sp"
                android:layout_marginTop="5sp"
                android:backgroundTint="@color/txt"
                android:padding="10dp"
                android:text="@string/buttG"
                android:textColor="@color/butt"
                android:textSize="35dp"
                android:textAllCaps="false"/>


            <Button
                android:id="@+id/bGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30sp"
                android:layout_marginTop="5sp"
                android:backgroundTint="@color/txt"
                android:padding="10dp"
                android:text="@string/bGame"
                android:textColor="@color/butt"
                android:textSize="35sp"
                tools:ignore="TextContrastCheck"
                android:textAllCaps="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="4dp"
            android:layout_weight="0.3"
            >


            <TextView
                style="@style/all_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/until"
                android:textSize="25sp"
                />
            <TextView
                style="@style/all_text"
                android:id="@+id/howMany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="25dp"
                />
            <TextView
                style="@style/all_text"
                android:text="@string/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                />

        </LinearLayout>






    </LinearLayout>




</FrameLayout>
